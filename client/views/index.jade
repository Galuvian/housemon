html(lang='en',ng-app='myApp',ng-controller='MainCtrl')
  head
    meta(charset='utf-8')
    meta(name='viewport',content='width=device-width')
    title Welcome
    include cdn
    != SocketStream
    
  body()
    nav.top-bar
      ul.top-bar
        li.name: h1: a(href='#') {{local.exactName}}
        li.toggle-topbar: a(href='#')
      section
        ul.right
          li(ng-repeat='r in routes')
            a(href='{{r.route}}') {{r.title}}
        
    .ng-view
